<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:clickable = "true"
    android:layout_height="50dp"
    android:id="@+id/rootLinear"
    android:background="@color/light_blue">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:clickable = "true"
        android:background="@color/light_blue"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:clickable = "true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="EUR/USD"
                android:drawableRight="@drawable/info"
                android:drawablePadding="5dp"
                android:textSize="18sp"
                android:id="@+id/tvAssetName"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="8dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:layout_marginRight="3dp">
            <com.lykkex.LykkeWallet.gui.widgets.DrawLine
                android:layout_width="wrap_content"
                android:clickable = "true"
                android:layout_height="24dp"
                android:id="@+id/graphic"
                android:layout_centerVertical="true"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:id="@+id/relPrice"
            android:clickable = "true"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp">
            <TextView
                android:layout_width="100dp"
                android:background="@drawable/price_not_come"
                android:layout_height="37dp"
                android:foregroundGravity="center"
                android:id="@+id/tvPrice"
                android:gravity="center"
                android:clickable = "true"
                android:textColor="@color/blue_color"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/grey_text"
        android:id="@+id/view" />
</RelativeLayout>